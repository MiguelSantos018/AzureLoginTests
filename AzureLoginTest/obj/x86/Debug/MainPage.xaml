<Page
    x:Class="AzureLoginTest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AzureLoginTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ScrollViewer>
            <StackPanel Background="Azure">
                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                    <Button x:ConnectionId='14' x:Name="CallGraphButton" 
                        Content="Call Microsoft Graph API"
                        HorizontalAlignment="Right" 
                        Padding="5" 
                                                      
                        Margin="5"
                        FontFamily="Segoe Ui"/>

                    <Button x:ConnectionId='15' x:Name="SignOutButton" 
                        Content="Sign-Out" 
                        HorizontalAlignment="Right" 
                        Padding="5" 
                                                    
                        Margin="5" 
                        Visibility="Collapsed" 
                        FontFamily="Segoe Ui"/>
                </StackPanel>
                <TextBlock Text="API Call Results" 
                       Margin="2,0,0,-5" 
                       FontFamily="Segoe Ui" />
                <TextBox x:ConnectionId='2' x:Name="ResultText" 
                     TextWrapping="Wrap" 
                     MinHeight="120" 
                     Margin="5"
                     FontFamily="Segoe Ui"/>
                <TextBlock Text="Token Info"
                       Margin="2,0,0,-5" 
                       FontFamily="Segoe Ui" />
                <TextBox x:ConnectionId='3' x:Name="TokenInfoText" 
                     TextWrapping="Wrap"
                     MinHeight="70"
                     Margin="5" 
                     FontFamily="Segoe Ui"/>
                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                    <Button x:ConnectionId='11' x:Name="DevButton" 
                        Content="Get Dev04 Token"
                        HorizontalAlignment="Right" 
                        Padding="5" 
                                                
                        Margin="5"
                        FontFamily="Segoe Ui"/>
                    <Button x:ConnectionId='12' x:Name="UserInfoDevButton" 
                        Content="Get User Info" 
                        HorizontalAlignment="Right" 
                        Padding="5" 
                                                        
                        Margin="5" 
                        Visibility="Collapsed" 
                        FontFamily="Segoe Ui"/>
                    <Button x:ConnectionId='13' x:Name="SignOutDevButton" 
                        Content="Sign-Out" 
                        HorizontalAlignment="Right" 
                        Padding="5" 
                                                       
                        Margin="5" 
                        Visibility="Collapsed" 
                        FontFamily="Segoe Ui"/>
                </StackPanel>
                <TextBlock Text="Dev04 Call Results" 
                       Margin="2,0,0,-5" 
                       FontFamily="Segoe Ui" />
                <TextBox x:ConnectionId='4' x:Name="ResultDevText" 
                     TextWrapping="Wrap" 
                     MinHeight="120" 
                     Margin="5"
                     FontFamily="Segoe Ui"/>
                <TextBlock Text="Dev04 Token Info"
                       Margin="2,0,0,-5" 
                       FontFamily="Segoe Ui" />
                <TextBox x:ConnectionId='5' x:Name="TokenInfoDevText" 
                     TextWrapping="Wrap"
                     MinHeight="70"
                     Margin="5" 
                     FontFamily="Segoe Ui"/>
                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                    <Button x:ConnectionId='8' x:Name="TSTButton" 
                        Content="Get TST04 Token"
                        HorizontalAlignment="Right" 
                        Padding="5" 
                                                
                        Margin="5"
                        FontFamily="Segoe Ui"/>
                    <Button x:ConnectionId='9' x:Name="UserInfoTSTButton" 
                        Content="Get User Info" 
                        HorizontalAlignment="Right" 
                        Padding="5" 
                                                        
                        Margin="5" 
                        Visibility="Collapsed" 
                        FontFamily="Segoe Ui"/>
                    <Button x:ConnectionId='10' x:Name="SignOutTSTButton" 
                        Content="Sign-Out" 
                        HorizontalAlignment="Right" 
                        Padding="5" 
                                                       
                        Margin="5" 
                        Visibility="Collapsed" 
                        FontFamily="Segoe Ui"/>
                </StackPanel>
                <TextBlock Text="TST Call Results" 
                       Margin="2,0,0,-5" 
                       FontFamily="Segoe Ui" />
                <TextBox x:ConnectionId='6' x:Name="ResultTSTText" 
                     TextWrapping="Wrap" 
                     MinHeight="120" 
                     Margin="5"
                     FontFamily="Segoe Ui"/>
                <TextBlock Text="TST Token Info"
                       Margin="2,0,0,-5" 
                       FontFamily="Segoe Ui" />
                <TextBox x:ConnectionId='7' x:Name="TokenInfoTSTText" 
                     TextWrapping="Wrap"
                     MinHeight="70"
                     Margin="5" 
                     FontFamily="Segoe Ui"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

